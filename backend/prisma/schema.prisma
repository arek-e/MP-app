// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets   = "native"

  previewFeatures = ["improvedQueryRaw"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
    id Int  @id @default(autoincrement())
    email String @unique
    firstname String
    lastname String
    password String
    phonenumber Int
    trashbins Trashbin[]
}

model Trashbin{
    id Int @id @default(autoincrement())
    author      User? @relation(fields: [authorId], references: [id])
    authorId    Int?
    status      String

    wastetypes  WastetypesOnTrashbins[]

    longitude   Float
    latitude    Float
    radius      Int

    createdAt   DateTime @default(now())
}

model Wastetypes{
    id Int @id @default(autoincrement())
    type String
    trashbins WastetypesOnTrashbins[]
}

model WastetypesOnTrashbins{
    trashbin Trashbin @relation(fields: [trashbinId], references: [id])
    trashbinId Int

    wastetype Wastetypes @relation(fields:[wastetypeId], references: [id])
    wastetypeId Int

    @@id([trashbinId, wastetypeId])
}

enum UserRole{
    APPUSER
    ADMIN
}